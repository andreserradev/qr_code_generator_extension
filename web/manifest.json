{
    "name": "QrCode Generator",
    "description": "QrCode generator",
    "version": "1.0.0",
    "content_security_policy": {
        "extension_pages": "script-src 'self' ; object-src 'self'"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": "/icons/qr_logo.png"
    },
    "manifest_version": 3,
    "icons": {
        "16": "icons/qr_logo.png",
        "32": "icons/qr_logo.png",
        "48": "icons/qr_logo.png",
        "128": "icons/qr_logo.png"
    }
}